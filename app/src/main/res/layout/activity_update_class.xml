<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292828"
    tools:context=".teacher.Classmanage.AddClass">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/teal_700"
            app:layout_constraintTop_toTopOf="parent"
            app:logo="@drawable/ic_back"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="  Chỉnh sửa thông tin lớp">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã lớp:"
            android:textColor="@color/white"
            android:textColorHint="@color/white"></TextView>

        <EditText
            android:id="@+id/malop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:height="48dp"
            android:editable="false"
            android:hint="Mã lớp"
            android:textColor="@color/teal_700"
            android:textColorHint="@color/teal_700"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Tên lớp:"
            android:textColor="@color/white"
            android:textColorHint="@color/white"></TextView>

        <EditText
            android:id="@+id/tenlop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:height="48dp"
            android:hint="Tên lớp"
            android:textColor="@color/teal_700"
            android:textColorHint="@color/teal_700"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Liên kết tới nhóm lớp:"
            android:textColor="@color/white"
            android:textColorHint="@color/white"></TextView>

        <EditText
            android:id="@+id/linklop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:height="48dp"
            android:hint="Liên kết tới group Facebook"
            android:textColor="@color/teal_700"
            android:textColorHint="@color/teal_700"></EditText>

        <Button
            android:id="@+id/btnupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_btn"
            android:text="Cập nhật"
            app:backgroundTint="#327C7B">

        </Button>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>